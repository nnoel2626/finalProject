extends user_layout.pug

block styles
    link(rel="stylesheet", href="/stylesheets/main.css")
    link(rel="stylesheet", href="/stylesheets/equipment.css")

block content
    .main
        .grid
            - for (var i = 0; i < equipment.length; i++)
                article.card.equipment-item
                    header.card__header
                    h1.equipment__name #{equipment[i].name}
                    div.card__image
                        img( alt="")
                    div.card__content
                        h4.equipment__brand #{equipment[i].brand}
                        h4.equipment__model #{equipment[i].model}
                        h4.equipment__serialNumber #{equipment[i].serialNumber}
                        h4.equipment__price #{equipment[i].price}
                        //- p.equipment__description A very interesting book about so many even more interesting things!
                    .card__actions
                        a.btn.btn-info.btn-lg(href='/rental/equipment-details/'+equipment[i]._id) See Details
                        a.btn.btn-primary.btn-sm(href='/rental/add-equipment' role='button') Add