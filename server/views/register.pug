extends layouts/visitors_layout.pug

block content
  .main.container
    .row
      .col-md-12.col-md-offset-3
        h1.display-4.m-b-2 Register
        form(method='POST' action='/auth/register' encrypt ='application/x-www-form-urlencoded')
          div.form-group
            label(for='firstname') Name
            input.form-control(type='text' id='firstname' placeholder='firstname' name='firstname')
          div.form-group
            label(for='lastname') lastname
            input.form-control(type='text' id='lastname' placeholder='lastname' name='lastname')
          div.form-group
            label(for='email') Email
            input.form-control(type='text' id='email' placeholder='email' name='email')
          div.form-group
            label(for='password') Password
            input.form-control(type='password' id='password' placeholder='password' name='password')
            br
            button.btn.btn-primary(type='submit') Register
            br
            br
            p 
             a(href='/auth/login') Login  if you already have user email and password.
               
             
